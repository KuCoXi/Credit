<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button
        android:id="@+id/bt_open_bluetooth"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开蓝牙"
        android:gravity="center"/>
    <Button
        android:id="@+id/bt_bluetooth_setting"
        android:layout_below="@id/bt_open_bluetooth"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙设置"
        android:gravity="center"/>
    <Spinner 
        android:id="@+id/sp_default_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_bluetooth_setting"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"/>
    <Button
        android:id="@+id/bt_reflash"
        android:layout_below="@id/bt_bluetooth_setting"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sp_default_reader"
        android:layout_alignParentRight="true"
        android:text="刷新列表"/>
    <Button
        android:id="@+id/bt_read"
        android:layout_below="@id/sp_default_reader"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="读二代证"
        android:gravity="center"/>

</RelativeLayout>
